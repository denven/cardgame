<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/styles/index.css" type="text/css" /> 
    <link rel="stylesheet" href="/styles/login.css" type="text/css" />   
    <title>Card Games</title>
  </head>

  <body>
    <% include ./partials/nav.ejs %>
    <div class="login-container">
      <div class='login-tile'>
        <div class='login-toggler label-align'>
          <div id='login' class='login-toggle'>Log In</div>
          <div class='login-toggle' id='signup'>Sign Up</div>
        </div>
  
        <form id="login-form" name="users" action="/login" method="POST">
          <div class="input-section">
            <label for="username">Username</label>
            <input class='text-input' type="text" name="username" required>
          </div>
          <div class="input-section">
            <label for="password">Password</label>
            <input class='text-input' type="password" name="password" id="password" required>
          </div>
          <button id="auth-button" type="submit" class='button button-primary button-login'>Submit</button>
        </form>
      </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.js"></script>    
    <script>
      $(document).ready(()=> {
        const selectLogin = () => {
          $('#login').addClass('type-select');
          $("#signup").removeClass('type-select');
          $('#login-form').attr('action', '/login');
          $('#auth-button').text('Log In');
        }

        const selectSignup = () => {
          $('#signup').addClass('type-select');
          $("#login").removeClass('type-select');
          $('#login-form').attr('action', '/signup');
          $('#auth-button').text('Sign Up');
        }
        
        $('#login').click(() => {       
          selectLogin();
        });

        $('#signup').click(() => {       
          selectSignup();
        });

        if(`<%= loginType %>` === 'signup') {
          selectSignup();
        } else {
          selectLogin();
        }
      });
    </script>
  </body>
</html>