<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/styles/nav.css" type="text/css" />   
    <link rel="stylesheet" href="/styles/common.css" type="text/css" /> 
    <title>Card Games</title>          
</head>

<body>

  <% include ./partials/nav.ejs %> 

    <h1>Archives</h1>  

    <div class='tile-container-leaderbox'>       

        <div class="tile-leaderboard"> 
          <h3 style='text-align: center;' class='tile-title'><%= accountName %>'s Games</h>

          <% completedGames.forEach( (game, index) => { %>
            <p> <%= index + 1 %> <%= game.name %> <%= game.completed_at %>, <%= game.players %>, <%= game.winners %></p>
          <% }) %> 

        </div>    

</body>

</html>